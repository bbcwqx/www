{
  "tasks": {
    "check": "deno fmt --check . && deno lint . && deno check",
    "dev": "deno run -A --env-file vite",
    "build": "vite build",
    "preview": "deno serve -A --env-file _fresh/server.js",
    "update": "deno run -A -r jsr:@fresh/update ."
  },
  "imports": {
    "@fresh/plugin-vite": "jsr:@fresh/plugin-vite@^0.9.6",
    "@preact/signals": "npm:@preact/signals@^2.3.1",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.12",
    "@typescript-eslint/parser": "npm:@typescript-eslint/parser@^8.41.0",
    "basecoat-css": "npm:basecoat-css@^0.3.2",
    "eslint": "npm:eslint@^9.34.0",
    "eslint-plugin-better-tailwindcss": "npm:eslint-plugin-better-tailwindcss@^3.7.6",
    "fresh": "jsr:@fresh/core@^2.0.0-beta.1",
    "preact": "npm:preact@^10.27.1",
    "tailwindcss": "npm:tailwindcss@^4.1.12",
    "vite": "npm:vite@^7.1.3"
  },
  "nodeModulesDir": "auto",
  "exclude": [
    "**/_fresh/*"
  ],
  "lint": {
    "rules": {
      "tags": [
        "fresh",
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.asynciterable",
      "dom.iterable",
      "deno.ns"
    ],
    "jsx": "precompile",
    "jsxImportSource": "preact",
    "jsxPrecompileSkipElements": [
      "a",
      "img",
      "source",
      "body",
      "html",
      "head",
      "title",
      "meta",
      "script",
      "link",
      "style",
      "base",
      "noscript",
      "template"
    ]
  }
}
