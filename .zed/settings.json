{
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "configFile": "dev.css"
        }
      }
    }
  },
  "languages": {
    "HTML": {
      "formatter": "language_server"
    },
    "JavaScript": {
      "language_servers": [
        "deno",
        "!typescript-language-server",
        "!vtsls",
        "!eslint",
        "..."
      ]
    }
  },
  "formatter": "language_server"
}
